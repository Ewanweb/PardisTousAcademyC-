{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "#{STAGING_DATABASE_CONNECTION_STRING}#"
  },
  "JwtSettings": {
    "Key": "#{STAGING_JWT_SECRET_KEY}#",
    "Issuer": "PardisAcademy",
    "Audience": "PardisAcademyUsers"
  },
  "EmailSettings": {
    "SmtpHost": "#{STAGING_SMTP_HOST}#",
    "SmtpPort": "#{STAGING_SMTP_PORT}#",
    "SmtpUser": "#{STAGING_SMTP_USER}#",
    "SmtpPassword": "#{STAGING_SMTP_PASSWORD}#",
    "FromEmail": "#{STAGING_FROM_EMAIL}#",
    "FromName": "آکادمی پردیس توس - تست"
  },
  "FileUpload": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".pdf",
      ".doc",
      ".docx"
    ],
    "UploadPath": "#{STAGING_UPLOAD_PATH}#"
  },
  "Security": {
    "RequireHttps": false,
    "CookieSecure": false,
    "CookieSameSite": "Lax"
  }
}
